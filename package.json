{
  "name": "remix-starter",
  "private": false,
  "sideEffects": false,
  "version": "1.0.0",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "build-storybook": "storybook build -o public/storybook",
    "dev": "cross-env NODE_ENV=development binode --require ./mocks -- @remix-run/dev:remix dev",
    "format": "prettier \"*/**/*.{js,jsx,ts,tsx,json,md,css,scss}\" --write",
    "formatw": "prettier \"{,!(node_modules)/**/}*.js\"",
    "lint": "run-p lint:*",
    "lint:js": "eslint \"*/**/*.{js,jsx,ts,tsx}\" --fix",
    "lint:css": "stylelint \"./**/*.{css,scss}\" --fix",
    "lint:ts": "tsc -p tsconfig.json --noEmit",
    "new:c": "cross-env HYGEN_TMPLS=generators hygen new component",
    "new:r": "cross-env HYGEN_TMPLS=generators hygen new route",
    "start": "remix-serve build",
    "start:mocks": "binode --require ./mocks -- @remix-run/serve:remix-serve build",
    "storybook": "storybook dev -s ../public -p 6006",
    "prepare": "husky install",
    "pretest:e2e:run": "npm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest --run",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "test:ci": "vitest --run --reporter=junit --coverage --outputFile.junit=test-results.xml",
    "test:pre-commit": "vitest run --changed HEAD~1",
    "typecheck": "tsc && tsc -p cypress",
    "validate": "run-p \"test -- --run\" lint test:e2e:run"
  },
  "prettier": {},
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@contentful/rich-text-react-renderer": "^15.16.4",
    "@contentful/rich-text-types": "^16.1.0",
    "@meltwater/fetch-favicon": "^1.0.4",
    "@remix-run/node": "^1.16.1",
    "@remix-run/react": "^1.16.1",
    "@remix-run/serve": "^1.16.1",
    "@remix-run/server-runtime": "^1.16.1",
    "clsx": "^1.2.1",
    "isbot": "^3.6.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@axe-core/react": "^4.7.1",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@faker-js/faker": "^7.6.0",
    "@remix-run/css-bundle": "^1.16.1",
    "@remix-run/dev": "^1.16.1",
    "@remix-run/eslint-config": "^1.16.1",
    "@remix-run/testing": "^1.16.1",
    "@storybook/addon-essentials": "^7.0.14",
    "@storybook/addon-interactions": "^7.0.14",
    "@storybook/addon-links": "^7.0.25",
    "@storybook/builder-vite": "^7.0.14",
    "@storybook/client-api": "^7.0.14",
    "@storybook/react": "^7.0.14",
    "@storybook/react-vite": "^7.0.14",
    "@storybook/react-webpack5": "^7.0.14",
    "@storybook/testing-library": "^0.1.0",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/eslint": "^8.40.0",
    "@types/jsdom": "^21.1.1",
    "@types/marked": "^5.0.0",
    "@types/node": "^20.2.3",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-c8": "^0.31.1",
    "@vitest/ui": "^0.31.1",
    "bcryptjs": "^2.4.3",
    "binode": "^1.0.5",
    "c8": "^7.13.0",
    "cookie": "^0.5.0",
    "cross-env": "^7.0.3",
    "cypress": "^12.12.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^9.20.3",
    "husky": "^8.0.3",
    "hygen": "^6.2.11",
    "jsdom": "^22.0.0",
    "lint-staged": "^13.2.2",
    "msw": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "postcss-loader": "^7.3.0",
    "postcss-logical": "^6.2.0",
    "postcss-nested": "^6.0.1",
    "postcss-preset-env": "^8.4.1",
    "postcss-safe-parser": "4.0.2",
    "prettier": "^2.8.8",
    "start-server-and-test": "^2.0.0",
    "storybook": "^7.0.14",
    "stylelint": "^15.6.2",
    "stylelint-config-standard": "^33.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.8",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.31.1",
    "vitest-axe": "^0.1.0",
    "vitest-canvas-mock": "^0.2.2"
  },
  "engines": {
    "node": ">=18"
  }
}
